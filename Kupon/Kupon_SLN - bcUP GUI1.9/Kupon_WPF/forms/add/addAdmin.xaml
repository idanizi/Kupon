<Window x:Class="Kupon_WPF.forms.add.addAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Admin" Height="300" Width="300">
    <Grid>
        <Label Content="ID" HorizontalAlignment="Left" Margin="35,60,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="IDTB" HorizontalAlignment="Left" Height="23" Margin="125,60,0,0" TextWrapping="Wrap" Text="Enter ID" VerticalAlignment="Top" Width="120" />
        <Label Content="Password" HorizontalAlignment="Left" Margin="35,107,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="pass" HorizontalAlignment="Left" Margin="125,107,0,0" VerticalAlignment="Top" Height="26" Width="120"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="170,210,0,0" VerticalAlignment="Top" Width="75" Click="Button_click"/>

    </Grid>
</Window>
