        <Button x:Name="passChange_B" HorizontalAlignment="Left" Margin="18,409,0,0" VerticalAlignment="Top" Width="130" Height="130" Click="Button_Click" RenderTransformOrigin="0.5,0.5" Grid.Column="2"/>
        <TextBlock x:Name="welcome_TB" Grid.Column="2" Margin="27,25,0,0" TextWrapping="Wrap" Text="welcome ghost" VerticalAlignment="Top" RenderTransformOrigin="0.84,-0.938" Height="46" Width="109" HorizontalAlignment="Left" TextAlignment="Center"/>
