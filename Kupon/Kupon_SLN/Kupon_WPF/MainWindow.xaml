            <Frame x:Name="mainRecordFrame" Content="" HorizontalAlignment="Left" Height="657" VerticalAlignment="Top" Width="973" Grid.ColumnSpan="2"/>
        </Grid>
        <Button x:Name="login_BTN" Content="login" Grid.Column="2" HorizontalAlignment="Left" Height="36" Margin="18,54,0,0" VerticalAlignment="Top" Width="130" Click="login_BTN_Click"/>
