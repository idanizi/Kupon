<Window x:Class="Kupon_WPF.passChange"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="passChange" Height="152" Width="274" Topmost="True" SizeToContent="Height" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="0,0,2,2">
        <PasswordBox x:Name="oldPass_PB" HorizontalAlignment="Left" Margin="133,24,0,0" VerticalAlignment="Top" Width="95"/>
        <PasswordBox x:Name="newPass_PB" HorizontalAlignment="Left" Margin="133,55,0,0" VerticalAlignment="Top" Width="95"/>
        <Label Content="old password" HorizontalAlignment="Left" Margin="38,16,0,0" VerticalAlignment="Top"/>
        <Label Content="new password" HorizontalAlignment="Left" Margin="38,47,0,0" VerticalAlignment="Top" Width="90"/>
        <Button Content="change" HorizontalAlignment="Left" Margin="85,86,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>

    </Grid>
</Window>
