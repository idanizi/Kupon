        Title="insertCoupon" Height="228.948" Width="300">
    <Grid Margin="0,0,0,9">
        <Label Content="insert coupon code:" HorizontalAlignment="Left" Height="25" Margin="10,10,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBox x:Name="kuponCode_TB" HorizontalAlignment="Left" Height="25" Margin="131,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <Button x:Name="UseCoupon_BTN" Content="UseKupon" HorizontalAlignment="Left" Height="28" Margin="167,152,0,0" VerticalAlignment="Top" Width="115" IsEnabled="False"/>
        <Label Content="Kupon information:" HorizontalAlignment="Left" Height="25" Margin="10,35,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBlock x:Name="KuponInfo_TB" HorizontalAlignment="Left" Height="87" Margin="10,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272"/>
        <Button x:Name="CheckCode_BTN" Content="Check Kupon Code" HorizontalAlignment="Left" Height="28" Margin="10,152,0,0" VerticalAlignment="Top" Width="139" Click="CheckCode_BTN_Click"/>

    </Grid>
</Window>
