      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="Show Coupon ">
    <Grid>
        <Label Content="coupon detiles:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <DataGrid x:Name="Coupon_Detiles" ItemsSource="{Binding}" IsReadOnly="True"  Margin="10,36,10,44" SelectionUnit="Cell" SelectionMode="Single"/>
        <Button Content="Buy Kupon" HorizontalAlignment="Left" Height="29" Margin="93,261,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click_1"/>
    </Grid>

</Page>
